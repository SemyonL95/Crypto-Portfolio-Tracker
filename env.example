
# Server host (empty string = all interfaces)
SERVER_HOST=

# Server port
SERVER_PORT=8080

# Server read timeout (duration format: 15s, 1m, etc.)
SERVER_READ_TIMEOUT=15s

# Server write timeout (duration format: 15s, 1m, etc.)
SERVER_WRITE_TIMEOUT=15s

# Server idle timeout (duration format: 60s, 1m, etc.)
SERVER_IDLE_TIMEOUT=60s

PRICE_PROVIDER=coingecko

PRICE_CACHE_TTL=60s

PRICE_REQUEST_TIMEOUT=10s

PRICE_RATE_LIMIT_RPS=10

PRICE_FALLBACK_ENABLED=true

COINGECKO_API_KEY=

TRANSACTION_PROVIDER=etherscan
TRANSACTION_REQUEST_TIMEOUT=10s
TRANSACTION_RATE_LIMIT_RPS=5

ETHERSCAN_API_KEY=
ETHERSCAN_BASE_URL=https://api.etherscan.io/api

# Database configuration
# SQLite database file path
DB_PATH=./data/portfolio.db

# Application configuration
APP_ENV=development
LOG_LEVEL=info
TOKENS_PATH=./static/tokens.json

# CoinGecko API configuration (optional)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
